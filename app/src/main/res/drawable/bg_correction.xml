<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#c6f5c4" />

    <!-- Dashed border -->
    <stroke
        android:width="1dp"
        android:color="#5ae854"
        android:dashWidth="10dp"
        android:dashGap="5dp" />

    <!-- Optional corner radius -->
    <corners android:radius="8dp" />
</shape>
