<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/top_image"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:radius="8dp">

    <!-- Mushroom Image -->
    <ImageView
        android:id="@+id/imageViews"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="@drawable/top_image"
        android:clipToOutline="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Mushroom Type -->
    <TextView
        android:id="@+id/textMushroomType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mushroom Type"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPostedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Posted by: username"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/imageVerifiedBadge"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="3dp"
            android:visibility="gone"
            android:src="@drawable/ic_verified_badge"
            android:contentDescription="Verified Badge"/>

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/textDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnDecline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:textSize="12sp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:minWidth="0dp"
            android:minHeight="0dp" />

        <Button
            android:id="@+id/btnVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify"
            android:textSize="12sp"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:minWidth="0dp"
            android:minHeight="0dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accurate Identity:"
            android:textSize="12sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@android:color/white">

            <Spinner
                android:id="@+id/spinnerCorrectedCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:spinnerMode="dropdown" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            app:cardBackgroundColor="@android:color/white">

            <EditText
                android:id="@+id/etCorrectedName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:padding="12dp"
                android:textColor="@color/black"
                android:hint="Username"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/btnDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="done"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:background="@drawable/btn_fullmap_bg"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:elevation="1dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>